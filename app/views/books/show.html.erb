<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render partial: 'side', locals: { user: @user, book: @book } %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@bookone.user_id) do %>
                <%= image_tag @bookone.user.get_profile_image(80,80) %>
              <% end %>
              <br />
              <%= link_to user_path(@bookone.user_id) do %>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@bookone) do %>
                <%= @bookone.title %>
              <% end %>
            </td>
            <td><%= @bookone.body %></td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
